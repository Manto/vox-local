{
  "name": "voxlocal-extension",
  "version": "1.0.0",
  "description": "High-quality text-to-speech Chrome extension built upon Kokoro.js - 82M parameter TTS model running entirely in the browser",
  "scripts": {
    "build": "wxt build",
    "build:chrome": "wxt build --browser chrome",
    "build:firefox": "wxt build --browser firefox",
    "build:all": "wxt build --browser chrome && wxt build --browser firefox",
    "build:dev": "wxt build --mode development",
    "build:dev:chrome": "wxt build --mode development --browser chrome",
    "build:dev:firefox": "wxt build --mode development --browser firefox",
    "build:release": "npm run build:all && zip -r voxlocal-chrome-v${npm_package_version}.zip .output/chrome/ && zip -r voxlocal-firefox-v${npm_package_version}.zip .output/firefox/",
    "dev": "wxt",
    "dev:chrome": "wxt --browser chrome",
    "dev:firefox": "wxt --browser firefox",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(kokoro-js|@huggingface)/)"
    ]
  },
  "type": "module",
  "author": "Xenova",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "babel-jest": "^29.7.0",
    "copy-webpack-plugin": "^13.0.1",
    "html-webpack-plugin": "^5.6.5",
    "jest": "^29.7.0",
    "typescript": "^5.0.0",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "wxt": "^0.20.11"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.7.6",
    "kokoro-js": "^1.2.1"
  }
}
