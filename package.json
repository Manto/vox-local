{
  "name": "voxlocal-extension",
  "version": "1.0.0",
  "description": "High-quality text-to-speech Chrome extension built upon Kokoro.js - 82M parameter TTS model running entirely in the browser",
  "scripts": {
    "build": "wxt build",
    "build:chrome": "wxt build --browser chrome",
    "build:firefox": "wxt build --browser firefox",
    "build:all": "npm run build:chrome && npm run build:firefox",
    "build:dev": "wxt build --mode development",
    "build:release": "npm run build:all && wxt zip --browser chrome && wxt zip --browser firefox",
    "dev": "wxt dev",
    "dev:chrome": "wxt dev --browser chrome",
    "dev:firefox": "wxt dev --browser firefox",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(js|ts)$": ["babel-jest", {
        "presets": [
          ["@babel/preset-env", {
            "targets": {
              "node": "current"
            }
          }]
        ]
      }]
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "testMatch": [
      "**/tests/**/*.test.(js|ts)"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(kokoro-js|@huggingface)/)"
    ]
  },
  "type": "module",
  "author": "Xenova",
  "license": "MIT",
  "devDependencies": {
    "@wxt-dev/module-react": "^1.0.0",
    "jest": "^29.7.0",
    "typescript": "^5.0.0",
    "wxt": "^0.20.11"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.7.6",
    "kokoro-js": "^1.2.1"
  }
}
