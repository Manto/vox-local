{
  "name": "voxlocal-extension",
  "version": "1.0.0",
  "description": "High-quality text-to-speech Chrome extension built upon Kokoro.js - 82M parameter TTS model running entirely in the browser",
  "scripts": {
    "dev": "wxt", 
    "dev:firefox": "wxt -b firefox", 
    "build": "wxt build", 
    "build:firefox": "wxt build -b firefox", 
    "zip": "wxt zip", 
    "zip:firefox": "wxt zip -b firefox", 
    "postinstall": "wxt prepare",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(kokoro-js|@huggingface)/)"
    ]
  },
  "type": "module",
  "author": "Shawn Chiao",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "wxt": "^0.20.11"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.7.6",
    "kokoro-js": "^1.2.1"
  }
}
